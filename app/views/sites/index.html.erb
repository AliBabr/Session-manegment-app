<div class="navbar-header">
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete  ,class: "logout-link" %>
  <h1 class="navbar-heading">Sites Manegement</h1>
  <p class="sub-heading">All sites</p>
</div>


  <div class="search-seaction">
    <div class="container-fluid">
      <div class="row">
        <div class="col-8">
          <form class="navbar-form">
            <div class="input-group no-border">
              <input type="text" value="" class="form-control" placeholder="Search...">
              <button type="submit" class="btn btn-white btn-round btn-just-icon">
                <i class="material-icons">search</i>
                <div class="ripple-container"></div>
              </button>
            </div>
          </form>
        </div>
        <div class="col-4">
          <div class="add-site-button">
            <a href="/sites/new" class="btn btn-primary btn-round">Add Site</a>
          </div>
        </div>
      </div>
    </div>
  </div>
   

<div class="content">
    <div class="container-fluid">
      <% @site.map do |s| %>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title "><%= s.name%></h4>
                <p class="card-category"><%= s.contact%></p>
                <p class="card-category"><%= s.address%></p>
                <a href="/manegers/new?id=<%=s.id%>" id="requestthis" class="btn btn-primary add-manger-button">Add Maneger</a>
              </div>

              <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead class=" text-primary">
                      <th>
                        ID
                      </th>
                      <th>
                        First Name
                      </th>
                      <th>
                        Last Name
                      </th>
                      <th>
                        Email
                      </th>
                      <th>
                        Password
                      </th>
                    </thead>
                    <tbody>
                    <% s.users.map do |u| %>
                      <tr>
                        <td>
                          <%= u.id%>
                        </td>
                        <td>
                          <%= u.first_name%>
                        </td>
                        <td>
                          <%= u.last_name%>
                        </td>
                        <td>
                          <%= u.email%>
                        </td>
                        <td class="text-primary">
                          <%= u.encrypted_password%>
                        </td>
                      </tr>
                    <%end%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
         </div>
        <%end%>
    </div>
  </div>

  <%= render 'sites/admin' %>
