<div class="navbar-header">
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete  ,class: "logout-link" %>
  <h1 class="navbar-heading">Sites Manegement</h1>
  <p class="sub-heading">All sites</p>
</div>


<div class="search-seaction">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <%= render 'sites/search' %>
      </div>
    </div>
  </div>
</div>



<div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <a href="/sites/new" class="btn btn-primary btn-round pull-right mr-5">Add Site</a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <div class='row'>
                <div class='col-6'>
                  <div class='row'>
                    <h4 class="card-title ml-3 "><%= @site.name%></h4>
                    <a class="ml-2" href = "sites/<%=@site.id%>/edit">
                      <img src="https://i.ibb.co/3d8X3kW/edit1.png" height="20px" width="20px" alt="edit" border="0">
                    </a>
                    <%= link_to '<img src="https://i.ibb.co/px82bhm/del.png" height="20px" width="20px" alt="delete" border="0">'.html_safe, delete_site_site_path(@site.id), class: 'delete-action ml-1', data: { confirm: 'Are you sure?', method: :delete } %>
                  </div>
                </div>
                <div class="col-6">  
                  <a href="/manegers/new?id=<%=@site.id%>" id="requestthis" class="btn btn-primary add-manger-button">Add Manager</a>
                </div>
              </div>
              <div class="row">
                <a class='ml-3 mr-2'><img src="https://i.ibb.co/6v024Dc/phone.png" width="20px" height="18px" alt="download" border="0"></a>
                <p class="card-category"><%= @site.contact%></p>
              </div>
              <div class="row">
                <a class="ml-3 mr-2"><img src="https://i.ibb.co/4FwmLzH/location-icon.png" width="20px" height="18px"width="20px" height="18px" alt="location-icon" border="0"></a>
                <p class="card-category"><%= @site.address%></p>
              </div>
            </div>

            <div class="card-body">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>
                      Name
                    </th>
                    <th>
                      Email
                    </th>
                    <th class= "actions-links">
                      Actions
                    </th>
                  </thead>
                  <tbody>
                  <% @site.users.map do |u| %>
                    <tr>
                      <td>
                        <%= u.first_name + " " + u.last_name %> 
                      </td>
                      <td>
                        <%= u.email%>
                      </td>
                      <td class="text-primary">
                      <a href="">
                        <img src="https://i.ibb.co/hFHxCxN/edit.png" height="40px" width="40px" alt="edit" border="0">
                      </a>
                      <a href="">
                        <img src="https://i.ibb.co/QK8ycft/delete.png" height="45px" width="45px" alt="delete" border="0">
                      </a>
            
                      <%# <%= u.encrypted_password    %>
                      </td>
                    </tr>
                  <%end%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        </div>

    </div>
  </div>

  <%= render 'sites/admin' %>
